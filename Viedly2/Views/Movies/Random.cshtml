@*@model Viedly2.Models.Movie*@
@model Viedly2.ViewModels.RandomMovieViewModel
@{
    ViewBag.Title = "Random";    /*// title of the page shown in the browser*/
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<h2>@Model.Name</h2>*@
<h2>@Model.Movie.Name</h2>

@if (Model.Customers.Count == 0)
{

    <text>No one has rented this movie before</text>

}
else
{


    <ul>
        @foreach (var customer in Model.Customers)
        {
            <li>@customer.Name</li>
        }
    </ul>

}